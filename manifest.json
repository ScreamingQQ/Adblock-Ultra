{
    "manifest_version": 3,
    "name": "Ultimate AdBlocker",
    "version": "1.0",
    "permissions": ["declarativeNetRequest", "scripting", "tabs"],
    "host_permissions": ["<all_urls>"],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "default_rules",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "background": {
        "service_worker": "background.js"
    }
}
